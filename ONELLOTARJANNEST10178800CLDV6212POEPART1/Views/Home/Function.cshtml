@{
    ViewBag.Title = "Test Azure Functions";
}

<h2>Test Azure Functions</h2>

<form asp-controller="Function" asp-action="StoreData" method="post">
    <h3>Store Table Info</h3>
    <input type="text" name="tableName" placeholder="Table Name" required />
    <input type="text" name="partitionKey" placeholder="Partition Key" required />
    <input type="text" name="rowKey" placeholder="Row Key" required />
    <input type="text" name="data" placeholder="Data" required />
    <button type="submit">Submit</button>
</form>

<form asp-controller="Function" asp-action="UploadBlob" method="post" enctype="multipart/form-data">
    <h3>Upload Blob</h3>
    <input type="text" name="containerName" placeholder="Container Name" required />
    <input type="text" name="blobName" placeholder="Blob Name" required />
    <input type="file" name="file" required />
    <button type="submit">Submit</button>
</form>

<form asp-controller="Function" asp-action="AddQueueMessage" method="post">
    <h3>Process Queue Message</h3>
    <input type="text" name="queueName" placeholder="Queue Name" required />
    <input type="text" name="message" placeholder="Message" required />
    <button type="submit">Submit</button>
</form>

<form asp-controller="Function" asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <h3>Upload File</h3>
    <input type="text" name="shareName" placeholder="Share Name" required />
    <input type="text" name="fileName" placeholder="File Name" required />
    <input type="file" name="file" required />
    <button type="submit">Submit</button>
</form>
